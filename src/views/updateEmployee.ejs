<%- include('header') %>
<style>
    /*full-width input fields*/ 
    input[type=text],
    input[type=password] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 2px solid #ccc;
        box-sizing: border-box;
    }

    /*style for button*/
    button {
        background-color: rgb(119, 115, 115);
        color: white;
        padding: 15px 20px;
        margin: 8px 0;
        cursor: pointer;
        width: 100%;
    }

    /*float signup buttons and add width*/
    .signupbtn {
        float: center;
        width: 20%;
    }

    /*padding to container elements*/
    .signup-container {
        margin:100px;
        padding: 16px;
        border:1px solid #ccc"
    }

    /* clear floats
    .clearfix::after {
        content: "";
        clear: both;
        display: table;
    } */

    /*styles for signup button 
      on extra small screens*/
    @media screen and (max-width: 300px) {
        .signupbtn {
            width: 100%;
        }
    }
</style>
<% if(result.length>0){ %>
    <form action="/api/updateEmployee?id=<%= result[0].id %>" method="post">
        <div class="signup-container">
            <label><b>Employee Code</b></label>
            <input type="text" placeholder="Enter the code of employee" name="EmployeeCode" value="<%= result[0].EmployeeCode %>" required>

            <label><b>Employee Name</b></label>
            <input type="text" placeholder="Enter the name of employee" name="EmployeeName" value="<%= result[0].EmployeeName %>" required>
 
            <label><b>Employee Email</b></label>
            <input type="text" placeholder="Enter the email id of employee" name="EmployeeEmail" value="<%= result[0].EmployeeEmail %>" required>

            <label>
                <input type="checkbox" checked="checked" name="isActive" style="margin-bottom:15px"> Is the employee active?
            </label>
            <div>
                <button type="submit" class="signupbtn"> Update Employee </button>
            </div>
            <% if(message){%>
            <h1 style="color:rgba(255, 0, 0, 0.794)"><%= message %></h1>
            <% } %>
        <%} else { %>
            <h1>No employees are registered</h1>
        <% } %>
        </div>
    </form>
    <%- include('footer')%>